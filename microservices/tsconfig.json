{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["services/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/__tests__/**/*"]
}
