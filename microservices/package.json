{
  "name": "social-proof-microservices",
  "version": "1.0.0",
  "description": "Microservices for social proof notifications platform",
  "workspaces": [
    "shared",
    "services/analytics",
    "services/billing",
    "services/integrations",
    "services/notification-stream-service",
    "services/notifications",
    "services/users"
  ],
  "scripts": {
    "start": "ts-node services/index.ts",
    "build": "npm run build:shared && npm run build:services",
    "build:shared": "npm run build --workspace=shared",
    "build:services": "npm run build --workspaces --if-present",
    "build:integrations": "npm run build --workspace=services/integrations",
    "build:notifications": "npm run build --workspace=services/notifications",
    "build:billing": "npm run build --workspace=services/billing",
    "dev": "ts-node-dev --respawn services/index.ts",
    "dev:integrations": "ts-node-dev --respawn services/integrations/index.ts",
    "dev:notifications": "ts-node-dev --respawn services/notifications/index.ts",
    "dev:notification-stream-service": "ts-node-dev --respawn services/notification-stream-service/index.ts",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "prepare-test-env": "docker-compose -f docker-compose.test.yml up -d",
    "cleanup-test-env": "docker-compose -f docker-compose.test.yml down",
    "install:all": "npm install && npm install --workspaces"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "ioredis": "^5.3.1",
    "kafkajs": "^2.2.3",
    "pg": "^8.9.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "jest": "^29.4.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=18"
  }
}
